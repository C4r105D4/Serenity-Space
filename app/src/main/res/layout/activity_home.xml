<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Botón para depresión -->
    <Button
        android:id="@+id/button_depresion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Psicólogo especialista en depresión"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp" />

    <!-- CardView para depresión -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_depresion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_depresion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_psicologo_depresion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Camilo Múnera"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView_descripcion_depresion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialista en psicología clínica, experto en tratamientos de depresión."
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para ansiedad -->
    <Button
        android:id="@+id/button_ansiedad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Psicólogo especialista en ansiedad"
        app:layout_constraintTop_toBottomOf="@id/cardView_depresion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp" />

    <!-- CardView para ansiedad -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_ansiedad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_ansiedad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_psicologo_ansiedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Carlos Jiménez"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView_descripcion_ansiedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialista en tratamiento de trastornos de ansiedad y pánico."
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para problemas familiares -->
    <Button
        android:id="@+id/button_familiar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Psicólogo especialista en problemas familiares"
        app:layout_constraintTop_toBottomOf="@id/cardView_ansiedad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp" />

    <!-- CardView para problemas familiares -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_familiar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_familiar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_psicologo_familiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Kevin Miranda"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView_descripcion_familiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experto en terapias familiares y de pareja."
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>